<!-- The form -->
<form class="example" action="/api/searchresult" method="POST" style="margin-top: 15px; width: 500px; margin-left: 50px;">
  <input type="text" placeholder="Enter alumni's name..." name="search">
  <button type="submit"><i class="fa fa-search"></i></button>
</form>
  
<div class="container" style="margin-top: 40px;">
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
<% data.forEach(function(person){ %>
    <div class= "col-md-3 col-sm-6" style="margin-left: 10px; margin-bottom: 10px;">
<div class="card">
    <img src="https://images.unsplash.com/photo-1511367461989-f85a21fda167?ixid=MXwxMjA3fDB8MHxzZWFyY2h8Mnx8aHVtYW58ZW58MHx8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" alt="John" style="width:100%">
    <h1><%= person.alumni_name %></h1>
    <p class="title"><%= person.alumni_email %></p>
    <p><%= person.college %></p>
    <a href="#"><i class="fa fa-dribbble"></i></a>
    <a href="#"><i class="fa fa-twitter"></i></a>
    <a href="#"><i class="fa fa-linkedin"></i></a>
    <a href="#"><i class="fa fa-facebook"></i></a>
    <a href="/api/users/<%=person.alumni_email%>"><p><button>Contact</button></p></a>
  </div>
</div>
<div class="col-md-1"></div>
<% }); %>

</div>
</div>
